
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <title>Inicio Sesión</title>
    <link rel="stylesheet" href="~/css/acceso.css" />
</head>
<body>
    <div>
        <div class="row my-auto">
            <div class="col-4"></div>
            <div class="col-4 ">
                <div class="text-center mt-5">
                    <img src="~/img/LogoFiscalia.png" alt="Alternate Text" />
                </div>
                <form asp-controller="Acceso" asp-action="Index" method="post" class="border-secondary border rounded mt-5 pt-5 pb-5 px-3 bg-light">
                    <h5 class="text-center text-secondary mb-5">Control de Asistencias</h5>
                    <div class="form-group px-5">
                        <div class="row">
                            <label class="text-secondary">Usuario</label>
                            <input class="form-control" id="usuario" type="text" name="usuario" value="" required />
                        </div>
                        <div class="row">
                            <label class="text-secondary">Contraseña</label>
                            <input class="form-control" id="password" type="password" name="password" value="" required />
                        </div>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="consultar">Ingresar</button>
                    </div>
                </form>
            </div>
            <div class="col-4"></div>
        </div>
    </div>
</body>
</html>
