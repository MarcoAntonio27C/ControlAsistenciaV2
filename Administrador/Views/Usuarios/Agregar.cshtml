@using ControlAsistencia_.Models;
@using Microsoft.AspNetCore.Identity;
@using System.Security.Claims;
@{
    ViewData["Title"] = "Inicio";
    var usuarios = (List<Usuario>)ViewData["usuarios"];
    var roles = (List<Roles>)ViewData["roles"];
    var unidades = (List<UnidadAdministrativa>)ViewData["unidades"];
    var rol = User.Claims.ElementAt(2).Value.ToUpper();
    var i = 1;
}
<link rel="stylesheet" href="~/css/personal.css" />
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<div>
    <h5 id="titulo" class="text-center py-3 rounded mt-4">Agregar Usuario</h5>
    <div class="mt-3 border rounded px-3 bg-light py-3">
        <form asp-controller="Usuarios" asp-action="Agregar" method="post">
            <div class="row">
                <div class="col">
                    <label>Administrador</label>
                    <input class="form-control" id="administrador" type="text" name="administrador" value="" placeholder="" />
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label>Nombre Usuario</label>
                    <input class="form-control" id="nombreUsuario" type="text" name="nombreUsuario" value="" placeholder="" />
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label>Rol</label>
                    <select class="form-control" name="rol">
                        <option value="77A225A3-1266-4B1F-B11C-504969AFA856">Root</option>
                        <option value="9A39BCCE-B092-4F90-9DE7-9E0FB2137034">Administrador</option>
                        <option value="A7C2766F-C09E-41A1-B6E4-35AEED3AD8E7">AllView</option>
                        <option value="592D923A-9D0B-424C-8BC3-0C42FF72495E">Unidad Administrativa</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label>Unidad Administrativa</label>
                    <select class="form-control" asp-items="@(new SelectList(unidades,nameof(UnidadAdministrativa.Id),nameof(UnidadAdministrativa.Nombre)))" name="unidadAdministrativa" id="unidadAdministrativa" required>
                        <option value=""></option>
                    </select>
                </div>
            </div>

            <div class="text-center mt-3">
                <button id="registrar" type="submit" class="btn btn-info py-2 px-4">Registrar</button>
            </div>
        </form>
    </div>
</div>