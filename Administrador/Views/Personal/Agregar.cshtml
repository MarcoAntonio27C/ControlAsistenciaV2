@{
    ViewData["Title"] = "Personal";
    var mensaje = ViewData["mensaje"];
    var error = ViewData["error"];
}

<link rel="stylesheet" href="~/css/personal.css" />
<div>
    <h5 id="titulo" class="text-center py-2 rounded mt-4">Agregar Nuevo Empleado</h5>

    @if (error.Equals(true))
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @mensaje
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (!mensaje.Equals("") && error.Equals(false))
    {
        <div class="alert alert-succes alert-dismissible fade show" role="alert">
            @mensaje
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }


    <div class="mt-3 border rounded px-3 py-3">
        <form asp-controller="Personal" asp-action="GuardarDatos" method="post">
            <div class="row">
                <div class="col">
                    <label>Nombre(s)</label>
                    <input class="form-control" type="text" name="nombre" value="" />
                </div>
                <div class="col">
                    <label>Apellido Paterno</label>
                    <input class="form-control" type="text" name="apellidoPaterno" value="" />
                </div>
                <div class="col">
                    <label>Apellido Materno</label>
                    <input class="form-control" type="text" name="apellidoMaterno" value="" />
                </div>
            </div>
            <div class="row mt-1">
                <div class="col">
                    <label>CURP</label>
                    <input class="form-control" type="text" name="curp" value="" />
                </div>
                <div class="col">
                    <label>Cargo</label>
                    <input class="form-control" type="text" name="cargo" value="" />
                </div>
                <div class="col">
                    <label>Numero Expediente</label>
                    <input class="form-control" type="text" name="numeroExpediente" value="" />
                </div>
                <div class="col">
                    <label>Adscripción</label>
                    <input class="form-control" type="text" name="adscripcion" value="" />
                </div>
            </div>
            <div class="row mt-1">
                <div class="col-10">
                    <label>Inmueble donde labora:</label>
                    <select class="form-control" id="inmueble" name="inmueble">
                        <option value="value"></option>
                    </select>
                </div>
                <div class="col-2">
                    <label>Fecha Ingreso</label>
                    <input class="form-control" type="text" name="fechaIngreso" value="" placeholder="dd/mm/aaaa" />
                </div>
            </div>

            <div class="text-center mt-3">
                <button type="submit" class="btn btn-info py-2 px-4">Registrar</button>
            </div>
        </form>
    </div>
</div>
<script src="~/js/Personal.js" asp-append-version="true"></script>