@using ControlAsistencia_.Models;
@{ 
    DatosEmpleado empleado = (DatosEmpleado)ViewData["empleado"];
    //var FechaActual = DateTime.Now.ToString("yyyy-MM-01");
    var FechaActual = DateTime.Now.ToString("yyyy-MM-01");
}

<div class="">
    <div class="mt-5 px-4 py-4 border rounded bg-light">
        <div class="row">
            <div class="col-6">
                <label>Nombre Completo</label>
                <input class="form-control" type="text" readonly name="name" value="@empleado.NombreCompleto" />
            </div>
            <div class="col-3">
                <label>Numero de Expediente</label>
                <input class="form-control" type="text" readonly name="name" value="@empleado.NumeroExpediente" />
            </div>
            <div class="col-3">
                <label>Contratación</label>
                <input class="form-control" type="text" readonly name="name" value="@empleado.Contratacion" />
            </div>
        </div>
        <div class="row mt-2">

            <div class="col">
                <label>Fecha Ingreso</label>
                <input class="form-control" type="text" readonly name="name" value="@empleado.FechaIngreso" />
            </div>
            <div class="col-6">
                <label>Centro Trabajo</label>
                <input class="form-control" type="text" readonly name="name" value="@empleado.CentroTrabajo" />
            </div>

            <div class="col">
                <label>Cargo</label>
                <input class="form-control" type="text" readonly name="name" value="@empleado.Cargo" />
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-2">
                <label>UR</label>
                <input class="form-control" type="text" readonly name="name" value="@empleado.UR" />
            </div>
            <div class="col-4">
                <label>Horario</label>
                <input class="form-control" type="text" readonly name="name" value="@empleado.Horario" />
            </div>
            <div class="col-6">
                <label>Unidad Administrativa</label>
                <input class="form-control" type="text" readonly name="name" value="@empleado.UnidadAdministrativa" />
            </div>
        </div>

        <hr />

        <div>
            <form method="post">
                <div class="row">
                    <div class="col text-center">
                        <input type="hidden" name="idEmpleado" id="idEmpleado" value="@empleado.Id" />
                        <label>Seleccionar Mes:</label>
                        <input class="form-control" type="date" min="2022-01-01" name="mes" id="mes" value="@FechaActual" />
                    </div>
                    <div class="col text-center">
                        <label class="text-white">.</label>
                        <button id="Buscar" type="button" class="form-control btn btn-info">Consultar Asistencias</button>
                    </div>
                    <div class="col text-center">
                        <label class="text-white">.</label>
                        <button type="submit" id="ReportePDF" class=" form-control btn btn-info align-bottom" asp-controller="Home" asp-action="DescargarPDF" formtarget="_blank">Generar Reporte</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">
            No hay registros de asistencias.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="my-5">
            <table id="tabla" class="table table-hover w-90 m-auto">
                <thead class="text-secondary text-center">
                    <tr>
                        <th scope="col">Dia</th>
                        <th scope="col">Entrada</th>
                        <th scope="col">Salida Comida</th>
                        <th scope="col">Entrada Comida</th>
                        <th scope="col">Salida</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                </tbody>
            </table>
        </div>

    </div>
</div>

<script src="~/js/asistencias.js" asp-append-version="true"></script>